<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:background="@drawable/curbside_gradient_background"
    android:orientation="vertical"
    tools:context=".Profile"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <Button
            android:id="@+id/trucksButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:height="60dp"
            android:background="@drawable/rounded_corner"
            android:text="Trucks"
            android:textAllCaps="false"
            android:textColor="#ffa500"
            android:textSize="16sp" />

        <Button
            android:id="@+id/menusButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:height="60dp"
            android:background="@drawable/rounded_corner"
            android:text="Menus"
            android:textAllCaps="false"
            android:textColor="#ffa500"
            android:textSize="16sp" />

        <Button
            android:id="@+id/companyInfoButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:height="60dp"
            android:background="@drawable/rounded_corner"
            android:text="Company Info"
            android:textAllCaps="false"
            android:textColor="#ffa500"
            android:textSize="16sp" />

        <Button
            android:id="@+id/notificationsButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:height="60dp"
            android:background="@drawable/rounded_corner"
            android:text="Notifications"
            android:textAllCaps="false"
            android:textColor="#ffa500"
            android:textSize="16sp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:height="60dp"
            android:background="@drawable/rounded_corner"
            android:text="Settings"
            android:textAllCaps="false"
            android:textColor="#ffa500"
            android:textSize="16sp" />

        <Button
            android:id="@+id/employeesButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:height="60dp"
            android:background="@drawable/rounded_corner"
            android:text="Employees"
            android:textAllCaps="false"
            android:textColor="#ffa500"
            android:textSize="16sp" />

        <Button
            android:id="@+id/retqr"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:height="60dp"
            android:background="@drawable/rounded_corner"
            android:text="Retrieve QR Code"
            android:textAllCaps="false"
            android:textColor="#ffa500"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/backToHomeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_arrow_back"/>


</androidx.constraintlayout.widget.ConstraintLayout>